import json
import boto3
sns = boto3.client('sns')

def lambda_handler(event, context):
    sns.publish(
        TopicArn='arn:aws:sns:region:account-id:NotifyAutoScale',
        Message='Instance baru telah ditambahkan oleh Auto Scaling Group.',
        Subject='Pemberitahuan Auto Scaling'
    )
    return {'statusCode': 200, 'body': json.dumps('Notifikasi terkirim')}
